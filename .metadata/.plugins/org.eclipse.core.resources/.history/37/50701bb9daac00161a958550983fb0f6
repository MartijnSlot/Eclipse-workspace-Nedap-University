package MoneyCounter;

public class DollarsAndCentsCounter {
	
	private static int dollars;
	private static int cents;
	private int dollarsleft;
	private int centsleft;
	
	//construct object
	public DollarsAndCentsCounter(int dollars, int cents){
		this.dollarsleft = dollars;
		this.centsleft= cents;
	}
	
	public DollarsAndCentsCounter(){
		this.dollarsleft = 0;
		this.centsleft= 0;
	}
	
	//queries
	public int dollars(){
			return dollarsleft;
	}
	public int cents(){
		return centsleft;
	}
	
	//method add dollar
	public void add(int dollars, int cents) {
		dollarsleft = dollarsleft + dollars;
		centsleft = centsleft + cents;
		if (centsleft > 99) {
			dollarsleft = dollarsleft + 1;
			centsleft = centsleft -100;
			}
		if (dollarsleft < 0)
			System.out.println("Dollars cannot be negative");
		if (centsleft < 0)
			System.out.println("Cents cannot be negative");
		System.out.println(
				"New amount: " + dollars() + " dollar, " + cents() + " cent");
	}
	
	//method reset counter
	public void reset(){
		dollarsleft = 0;
		centsleft = 0;
		System.out.println(
				"Reset: " + dollars() + " dollar, " + cents() + " cent");
	}
	
	//main methods
	public static void main(String[] args){
		DollarsAndCentsCounter count =  new DollarsAndCentsCounter();
		count.add(5, 0);
		count.add(0, 100);
		count.reset();		
	}

}

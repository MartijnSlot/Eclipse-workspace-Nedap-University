package week3.hotel;

import java.io.PrintStream;
import week3.Format;

public class Bill {
	
	private double sum;
	private PrintStream out;

	public Bill(PrintStream theOutStream) {
		this.out = theOutStream;
	}
	
	public void newItem(Bill.Item item){
		Format.printLine(item.toString(), Item.getAmount(), out);
		sum += Item.getAmount();
	}

	public void close() {
		Format.printLine("Total amount: ", getSum(), out);
		
	}
	
	public double getSum() {
		return sum;
	}
	
	public interface Item {
		static double getAmount() {
			return 0;
		}
	}

}

package MoneyCounter;

public class DollarsAndCentsCounter {
	
	private static int dollars;
	private static int cents;
	private int dollarsleft;
	private int centsleft;
	
	//construct object
	public DollarsAndCentsCounter(int dollars, int cents){
		this.dollarsleft = dollars;
		this.centsleft= cents;
	}
	
	public DollarsAndCentsCounter(){
		this.dollarsleft = 0;
		this.centsleft= 0;
	}
	
	//queries
	public int dollars(){
			return dollarsleft;
	}
	public int cents(){
		return centsleft;
	}
	
	//method add dollar
	public void add(int dollars, int cents) {
		System.out.println(
				"Previous amount: " + dollars() + " dollar, " + cents() + " cent");
		dollarsleft = dollarsleft + dollars;
		centsleft = centsleft + cents;
		if (count.centsleft > 99) {
			count.dollarsleft = count.dollarsleft + 1;
			count.centsleft = count.centsleft -100;
			}
		System.out.println(
				"New amount: " + dollars() + " dollar, " + cents() + " cent");
	}
	
	//method reset counter
	public void reset(){
		dollarsleft = 0;
		centsleft = 0;
		System.out.println(
				"Reset: " + dollars() + " dollar, " + cents() + " cent");
	}
	
	//main methods
	public static void main(String[] args){
		DollarsAndCentsCounter count =  new DollarsAndCentsCounter(-2,1);
		if (count.dollarsleft < 0)
			System.out.println("Dollars cannot be negative");
		if (count.centsleft < 0)
			System.out.println("Cents cannot be negative");

		count.add(1, 1);
		count.subtract(2, 25);
		count.reset();		
	}

}

package week5;

/**
 * Executable class for the game Tic Tac Toe. The game can be played against the
 * computer. Lab assignment Module 2
 * 
 * @author Theo Ruys
 * @version $Revision: 1.4 $
 */

public class TicTacToe {

	public static Player player1;
	public static Player player2;

	public static void main(String[] args) {
		if (args.length != 2) {
			System.out.println("Error: Number of players can only be 2.");
		}

		for (int i = 0; i < args.length; i++){
			if (args[i].equals("-N")) {
				player1 = new HumanPlayer(args[i], Mark.XX);
				player2 = new ComputerPlayer(Mark.OO);
				Game newGame = new Game(player1, player2);
				newGame.start();
			}
		}

		for (int i = 0; i < args.length; i++){
			if (!args[i].equals("-N")) {
				player1 = new HumanPlayer(args[0], Mark.XX);
				player2 = new HumanPlayer(args[1], Mark.OO);
				Game newGame = new Game(player1, player2);
				newGame.start();
			}
		}

	}


}
}

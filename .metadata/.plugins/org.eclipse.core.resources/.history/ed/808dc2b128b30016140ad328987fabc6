package ss.week2.hotel;

public class Hotel {
	
	//---vars
	public static String password;
	public static String guest;
	public static Room room;

	
	//---constructor
	public Hotel(){
		this.guest = null;
		this.password = null;
		this.room = null;
	}
	
	//---queries
	
	//@ ensures /result = true || /result = false;
	/*@ pure */ public Room getFreeRoom(){
		return room;
	}
	
	//@ ensures /result = true || /result = false;
	/*@ pure */ public Room getRoom(){
		return room;
		
	}
	
	//@ ensures /result = password;
	/*@ pure */ public String getPassword(){
		return this.password;
	}
	
	public String toString(){
		return "";
	}
	
	//---commands
	
	//@ requires password.length() >= 6 && !password.contains(" ");
	public void checkIn(String password, String guestName){
		this.guest = guestName;
		this.password = password;
		this.room = getRoom();
		
	}
	
	//@ requires password.length() >= 6 && !password.contains(" ");
	public void checkout(String guestName){
		
	}
}

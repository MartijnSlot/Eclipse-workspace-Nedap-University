package week7.threads;

public class SynchronizedIntCell implements IntCell {

	private int value;
	private boolean inbuffer = false;

	public synchronized void setValue(int valueArg) {
		if (inbuffer = false) { 
			this.value = valueArg;
			inbuffer = true;
		}

	}

	public synchronized int getValue() {
		if (inbuffer = true){
			inbuffer = false;
			return value;
		}
		return 2;
	}
}

